<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <META HTTP-EQUIV="CACHE-CONTROL" CONTENT="NO-CACHE">
    <title>Selected Photo</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="/stylesheets/custom.css" rel="stylesheet" media="screen">
    <link href="/css/photos.css" rel="stylesheet" type="text/css">
    <link href="/css/theme.css" rel="stylesheet" type="text/css">
  </head>
  <body>
<% for (var i=0; i<breadcrumb.length; i++) { %>
  <% if (i==breadcrumb.length-1){ %>
    <%= breadcrumb[i].name %>
  <% }else{ %>
    <a href="<%= breadcrumb[i].url %>"> <%= breadcrumb[i].name %> &raquo; </a>
  <% } %>

<% } %>

<h1><%= photo.name %></h1>

<img src="/<%= directory %>/<%= photo.path %>" alt="<%= photo.name%>"><br />

<% if (photo.exif && photo.exif.Description){ %>
<%= photo.exif.Description%>
<% }else{ %>
<%= photo.name%>
<% } %>


<% if (photo.exif){ %>
<section class="info">
  <h2>Info</h2>
  <table>
    <% for (var key in photo.exif){ %>
    <% if (key!="Description"){ %>
    <tr>
      <td>
        <%= key %>
      </td>
      <td>
        <%= photo.exif[key] %>
      </td>
    </tr>
    <% } %>
    <% } %>
  </table>
</section>
<% } %>
</body>
</html>